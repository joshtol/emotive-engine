{
  "type": "module",
  "name": "@joshtol/emotive-engine",
  "version": "2.4.0",
  "description": "Proprietary animation engine with musical time synchronization",
  "main": "dist/emotive-engine.min.js",
  "module": "src/EmotiveMascotPublic.js",
  "types": "dist/emotive-engine.d.ts",
  "private": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "files": [
    "dist",
    "src",
    "types",
    "assets/emotive-engine-icon.svg",
    "assets/emotive-engine-full-BW.svg",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build:rollup": "rollup -c --environment NODE_ENV:production",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:watch": "rollup -c -w --environment NODE_ENV:development",
    "build:analyze": "rollup -c --environment NODE_ENV:production,ANALYZE:true",
    "build:all": "npm run build && npm run build:dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "keywords": [
    "mascot",
    "animation",
    "canvas",
    "ui",
    "component",
    "interactive",
    "emotion",
    "particle",
    "visualization",
    "conversational-ui",
    "ai-assistant",
    "llm",
    "chatbot",
    "emotive"
  ],
  "author": "Joshua Tollette",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/joshtol/emotive-engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshtol/emotive-engine.git"
  },
  "bugs": {
    "url": "https://github.com/joshtol/emotive-engine/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-loader": "^9.1.3",
    "jsdom": "^23.0.0",
    "rollup": "^4.9.5",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser-webpack-plugin": "^5.3.9",
    "vitest": "^1.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4"
  }
}
