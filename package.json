{
  "type": "module",
  "name": "@joshtol/emotive-engine",
  "version": "2.5.0",
  "description": "Proprietary animation engine with musical time synchronization",
  "main": "dist/emotive-engine.min.js",
  "module": "src/index.js",
  "types": "dist/emotive-engine.d.ts",
  "exports": {
    ".": {
      "types": "./dist/emotive-engine.d.ts",
      "import": "./src/index.js",
      "require": "./dist/emotive-engine.min.js"
    },
    "./package.json": "./package.json"
  },
  "private": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "files": [
    "dist",
    "src",
    "types",
    "assets/emotive-engine-icon.svg",
    "assets/emotive-engine-full-BW.svg",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production && node scripts/copy-built-files.js",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:split": "rollup -c rollup.split.config.js --environment NODE_ENV:production",
    "build:demo": "rollup -c rollup.demo.config.js",
    "build:watch": "rollup -c -w --environment NODE_ENV:development",
    "dev": "cd site && npm run dev",
    "serve": "cd site && python -m http.server 5000",
    "local": "node scripts/local-server.js",
    "build:analyze": "rollup -c --environment NODE_ENV:production,ANALYZE:true",
    "copy-files": "node scripts/copy-built-files.js",
    "build:docs": "node scripts/build-docs.js",
    "optimize": "node scripts/optimize-bundle.js",
    "docs": "jsdoc -c jsdoc.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:watch": "vitest bench --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "size": "bundlesize",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "prepare": "husky"
  },
  "keywords": [
    "mascot",
    "animation",
    "canvas",
    "ui",
    "component",
    "interactive",
    "emotion",
    "particle",
    "visualization",
    "conversational-ui",
    "ai-assistant",
    "llm",
    "chatbot",
    "emotive"
  ],
  "author": "Joshua Tollette",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/joshtol/emotive-engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshtol/emotive-engine.git"
  },
  "bugs": {
    "url": "https://github.com/joshtol/emotive-engine/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^3.2.4",
    "bundlesize2": "^0.0.35",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^4.1.1",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^9.1.2",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rollup": "^4.9.5",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.44.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@sentry/browser": "^10.20.0",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "next": "^15.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "vitest related --run"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/emotive-engine.min.js",
      "maxSize": "500 KB",
      "compression": "none"
    },
    {
      "path": "./dist/emotive-engine.min.js",
      "maxSize": "150 KB",
      "compression": "gzip"
    }
  ]
}
