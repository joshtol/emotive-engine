{
  "type": "module",
  "name": "@joshtol/emotive-engine",
  "version": "2.5.1",
  "description": "Open-source animation engine for AI-controlled emotional visualizations with musical time synchronization",
  "main": "dist/emotive-mascot.umd.js",
  "module": "dist/mascot.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/mascot.js",
      "require": "./dist/emotive-mascot.umd.js"
    },
    "./package.json": "./package.json"
  },
  "private": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "types",
    "assets/emotive-engine-icon.svg",
    "assets/emotive-engine-full-BW.svg",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production && node scripts/copy-built-files.js",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:split": "rollup -c rollup.split.config.js --environment NODE_ENV:production",
    "build:demo": "rollup -c rollup.demo.config.js",
    "build:watch": "rollup -c -w --environment NODE_ENV:development",
    "dev": "cd site && npm run dev",
    "serve": "cd site && python -m http.server 5000",
    "local": "node scripts/local-server.js",
    "build:analyze": "rollup -c --environment NODE_ENV:production,ANALYZE:true",
    "copy-files": "node scripts/copy-built-files.js",
    "build:docs": "node scripts/build-docs.js",
    "optimize": "node scripts/optimize-bundle.js",
    "docs": "jsdoc -c jsdoc.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:watch": "vitest bench --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "size": "node scripts/check-bundle-size.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "prepare": "husky || true"
  },
  "keywords": [
    "animation",
    "canvas",
    "canvas2d",
    "particle-system",
    "particle-animation",
    "visual-effects",
    "emotional-animation",
    "character-animation",
    "mascot",
    "ui-animation",
    "interactive",
    "real-time",
    "high-performance",
    "ai-assistant",
    "llm",
    "chatbot",
    "conversational-ui",
    "sentiment-visualization",
    "emotion",
    "emotional-intelligence",
    "gesture-animation",
    "shape-morphing",
    "typescript",
    "react",
    "vue",
    "angular",
    "javascript",
    "open-source",
    "mit-license",
    "audio-reactive",
    "music-visualization",
    "beat-detection",
    "educational",
    "retail",
    "customer-support",
    "user-engagement"
  ],
  "author": "Joshua Tollette",
  "license": "MIT",
  "homepage": "https://github.com/joshtol/emotive-engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshtol/emotive-engine.git"
  },
  "bugs": {
    "url": "https://github.com/joshtol/emotive-engine/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^3.2.4",
    "canvas": "^3.2.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "gif.js": "^0.2.0",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^9.1.2",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rollup": "^4.9.5",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.44.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@sentry/browser": "^10.20.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "vitest related --run"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
