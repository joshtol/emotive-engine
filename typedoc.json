{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["./src/index.js"],
  "entryPointStrategy": "expand",
  "out": "./docs/api",
  "tsconfig": "./tsconfig.docs.json",
  "name": "Emotive Engine API Reference",
  "readme": "none",
  "excludePrivate": true,
  "excludeProtected": true,
  "excludeInternal": true,
  "hideGenerator": true,
  "searchInComments": true,
  "categorizeByGroup": true,
  "defaultCategory": "Other",
  "categoryOrder": ["Core", "Types", "Animation", "Particles", "Events", "Plugins", "*"],
  "sort": ["source-order"],
  "visibilityFilters": {
    "protected": false,
    "private": false,
    "inherited": true,
    "external": false
  },
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  }
}
